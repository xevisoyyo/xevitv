{
  "manifest_version": 3,
  "name": "XeviTV",
  "version": "1.0.0",
  "description": "Extensi√≥n de Chrome para ver canales de TV online",
  "permissions": [
    "storage"
    ,"tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/menu.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/16_inactive.png",
      "48": "icons/48_inactive.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/16_active.png",
    "48": "icons/48_active.png",
    "128": "icons/128.png"
    },
  "web_accessible_resources": [
    {
      "resources": [ "icons/*.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
